@page "/ConsultaPagos"
@inject HttpClient httpClient

<div class="card">
    <div class="card-header">
        <h3>Consulta de Pagos</h3>
    </div>

    <div class="card-body">
        <div class="row">
            <button type="button" @onclick="Buscar" class="btn btn-primary input-group-text">
                <i class="oi oi-magnifying-glass " />
            </button>
        </div>
        @if (Pagos is not null)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>PagosId</th>
                        <th>ID del Deudor</th>
                        <th>Fecha de desembolso </th>
                        <th>CantidadCoutas</th>
                        <th>Concepto</th>
                        <th>MontoPago</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Pagos in Pagos)
                    {
                        <tr>
                            <td>@Pagos.PagoId</td>
                            <td>@Pagos.ClienteId</td>
                            <td>@Pagos.Fecha</td>
                            <td>@Pagos.CantidadCoutas</td>
                            <td>@Pagos.Concepto</td>
                            <td>@Pagos.MontoPago</td>
                            <td><a href="RegistroPagos/@Pagos.PagoId">Ver</a></td>
                        </tr>
                    }

                </tbody>

            </table>
        }
    </div>
    <div class="card-footer">
        <div class="form-row justify-content-sm-between" aria-orientation="vertical">
            <div class="col-3">
                <label for="CantidaRegistro" class="col-form-label"><strong>Total de Pagos registrados</strong>&nbsp;</label>
                <input id="CantidaRegistro" @bind-value="@conteo" disabled class="form-control" />
            </div>
        </div>
    </div>
</div>

@code {
    public List<Pagos>? Pagos { get; set; }
    public int conteo { get; set; }

    public async Task Buscar()
    {
        Pagos = await httpClient.GetFromJsonAsync<List<Pagos>>($"api/Pagos");

        conteo = Pagos != null ? Pagos!.Count() : 0;
        StateHasChanged();

    }

}